{
  "name": "Cloaked Firefox Desktop",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    6080
  ],
  // This new section ensures port 6080 is always public by default
  "portsAttributes": {
    "6080": {
      "label": "VNC Desktop",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  "postStartCommand": "/usr/local/bin/startup.sh",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": []
    }
  },
  "remoteUser": "vscode"
}